<h1>Here You Can Find All The Articles</h1>

<p>
  <%= link_to "Create Article",  new_article_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to "Show",  article_path(article) %></td>
      <td><%= link_to "Edit",  edit_article_path(article) %></td>
      <td><%= link_to "Delete",  article_path(article), method: :delete, date: {confirm: "Sure Yabni ?"} %></td>
    </tr>
  <% end %>

</table>